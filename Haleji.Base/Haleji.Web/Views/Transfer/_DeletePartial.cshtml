@model Haleji.BusinessObjects.Movement
<!-- Modal -->
<div class="modal fade" id="deletetransferItem" tabindex="-1" role="dialog" aria-labelledby="deletetransferItemTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form asp-action="Delete">
                <div class="modal-header">
                    <h5 class="modal-title" id="deletetransferItemTitle">Delete Transfer</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Modal Body -->
                    <h6>
                        Are you sure you want to delete this?
                    </h6>
                    <input asp-for="MovementId" class="form-control" type="hidden" />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.MovDate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.MovDate)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ItemName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ItemName)
                        </dd>
                        @if (Model.PersonId != null)
                        {
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.PersonId)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.PersonName)
                            </dd>
                        }
                        @if (Model.LocationId != null)
                        {
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.LocationId)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.LocationName)
                            </dd>
                        }
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.TransactionTypeId)
                        </dt>
                        <dd class="col-sm-10">
                            @Enum.GetName(typeof(TransactionType), Model.TransactionTypeId)
                        </dd>
                    </dl>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-danger" data-save="modal">Delete</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

