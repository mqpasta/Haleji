@{
}
@model IEnumerable<Haleji.BusinessObjects.Purchase>

@{
    ViewData["Title"] = "Purchases";
}

<h1>Purchases</h1>

<div id="ModalPlaceHolder"></div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="purchaseList">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VendorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PONumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceNumber)
            </th>
           @* <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>*@
            @*<th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseDate)
                </td>
                <td>
                    <span>
                        @Html.DisplayFor(modelItem => item.ItemName)
                        (@Html.DisplayFor(modelItem => item.TagNo))
                    </span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VendorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PONumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceNumber)
                </td>
               @* <td>
                    @Html.DisplayFor(modelItem => item.StartDate) - @Html.DisplayFor(modelItem => item.EndDate)
                </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Key }) |
                <button type="button" class="btn btn-link" data-toggle="ajax-modal"
                        data-target="#deletePurchase" data-url="@Url.Action("Delete", "Purchase", new { id = item.Key})">
                    Delete
                </button>
                |
                <button type="button" class="btn btn-link" data-toggle="ajax-modal"
                        data-target="#viewPurchase" data-url="@Url.Action("View", "Purchase", new { id = item.Key})">
                    View
                </button> |
                @Html.ActionLink("Details", "Details", new { id = item.Key })
            </td>
            </tr>
        }
    </tbody>
</table>


<script>
    $(document).ready(function () {
        $('#purchaseList').DataTable();
    });
</script>